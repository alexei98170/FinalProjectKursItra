@using FinalProjectKursItra.Data;
@using FinalProjectKursItra.Models;
@using Microsoft.AspNetCore.Identity;

@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext db

@model FinalProjectKursItra.Models.ApplicationUser
@{ ViewData["Title"] = "Index"; }

    <div class="col-md-7">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Company News</h3>
            </div>
            <table class="table">
                @{ var news = db.News.Where(news => news.AuthorId == Model.Id);

                }
                @foreach (var newS in news)
                {
                    <tr>
                        <td><a asp-controller="Home" asp-action="Company" asp-route-id="@newS.NewsId">@Html.Raw(newS.Title)</a></td>
                       
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="col-md-1">
        <form asp-action="Create" method="post" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-primary">
                Create
            </button>
        </form>
    </div>
</div>