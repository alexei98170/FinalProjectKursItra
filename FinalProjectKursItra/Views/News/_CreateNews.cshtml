@model FinalProjectKursItra.ViewModels.CreateNewsViewModel
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <h4>Create task</h4>
            <hr />
            <div class="col-md-4">
                <div class="thumbnail" style="height: 160px; width:160px">
                    <img id="photo" style="height: 150px; width: 150px" src="https://cloudinary.com/console/media_library/asset/image/upload/empty_avatar.jpg">
                </div>

                <a href="#" id="upload_widget_opener">Add photo</a>
                <script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
                <script src="~/js/photo.js" type="text/javascript"></script>
            </div>
            <div class="col-md-12">
                <div class="col-md-12">
                    <form asp-action="CreateNews" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" hidden="hidden">
                            <label asp-for="AuthorId" class="control-label"></label>
                            <input asp-for="AuthorId" class="form-control" value="@Model.AuthorId" />
                            <span asp-validation-for="AuthorId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />

                        </div>
                        <script src="~/lib/jquery/dist/jquery.js"></script>
                        <script src="~/lib/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
                        <link rel="stylesheet" href="~/lib/bootstrap-tagsinput/src/bootstrap-tagsinput.css" />
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" id="message" class="form-control" rows="5" value=""></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group" hidden="hidden">
                            <label asp-for="Photo" class="control-label"></label>
                            <input asp-for="Photo" class="form-control" id="inPhoto" value="http://res.cloudinary.com/dr5gmgpmp/image/upload/v1527502379/empty_avatar.jpg" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <input type="submit" value="Save" class=" btn btn-default" />

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
